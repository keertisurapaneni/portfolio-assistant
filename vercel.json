{
  "buildCommand": "cd app && npm ci && npm run build",
  "outputDirectory": "app/dist",
  "installCommand": "npm install --prefix ./app",
  "framework": "vite",
  "ignoreCommand": "git log -1 --pretty=%B | head -1 | grep -qiE '^(docs|chore|ci)(\\(.+\\))?:'",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
